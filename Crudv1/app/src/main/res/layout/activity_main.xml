<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/insert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Registrar"
        android:backgroundTint="#3C99D5"
        android:textSize="20dp"
        android:onClick="windowInsert"/>

    <Button
        android:id="@+id/update"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#218CBB"
        android:text="Modificar"
        android:textSize="20dp"
        android:onClick="windowUpdate"/>

    <Button
        android:id="@+id/read"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ver"
        android:backgroundTint="#0A72A9"
        android:textSize="20dp"
        android:onClick="windowShow"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#1C68D0"
        android:text="Eliminar"
        android:textSize="20dp"
        android:onClick="windowDelete"/>

</LinearLayout>